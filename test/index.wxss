.change-question{
  width: 750rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  padding-bottom: env(safe-area-inset-bottom);
}

.clickbutton{
  background:#2d8cf0;
  color:white;
  border-radius: 10px
}
.clickbutton2{
  background-color: #d2f1f0;
  color: black;
  border-radius: 10px
}

.firstDiv{
 height: 1000rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  
}

.button{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align:center;
}

.textsize{
  font-size: 30pt;
padding-top: 125rpx;
font-family: cursive;

}

.textsize2{
  font-size: large;
}


.page-item{
  display: flex;
  flex-direction: column
}

.count-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-right: 30rpx;
}

.text-current-count{
  font-size: 60rpx;
  color: #00c6c4;
  font-weight: bold;
}

.text-total-count{
  font-size: 60rpx;
  color:#999999;
  font-weight: bold;
}

.content{
  font-size: 80rpx;
  align-self: center;
  margin-top: 80rpx
}



.img{
  width: 690rpx;
  margin: 80rpx 0rpx 0rpx 30rpx;
  border-radius: 10rpx;
}